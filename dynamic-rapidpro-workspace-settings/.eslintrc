{
  "parserOptions": {
    "ecmaVersion": 9
  },
  "extends": ["@medic", "plugin:json/recommended"],
  "plugins": ["json"],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "quotes": ["error", "single", { "allowTemplateLiterals": true, "avoidEscape": true }],
    "max-len": ["error", {"code": 180}]
  }
}
